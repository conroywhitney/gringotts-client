<% content_for :header do %>
  <img src="http://semantic-ui.com/build/examples/images/cat.png" class="ui medium image">
  <div class="ui hidden transition information">
    <h1 class="ui inverted header">
      <%= @current_step[:greeting] %>
    </h1>
    <p>This app demonstrates <a href="https://github.com/conroywhitney/gringotts">Gringotts 2FA Phone Verification</a> for Rails</p>
    <a href="<%= @current_step[:target] %>" class="large blue inverted ui button">
      <%= @current_step[:cta] %>
    </a>
    <a href="https://github.com/conroywhitney/gringotts" class="large white inverted animated fade ui button">
      Add Gringotts to Your App
    </a>
  </div>
<% end %>

<%= render partial: "features" %>

<%= render partial: "cta" %>

<%= render partial: "testimonials" %>
