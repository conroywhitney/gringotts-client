<div class="inverted secondary pointing ui menu">
  
  <div class="header item">
    <%= link_to "Cat University", root_path %>
  </div>
  
  <div class="right menu">
    <div class="ui dropdown link item">
      Courses
      <i class="dropdown icon"></i>
      <div class="menu">
        <a class="item">Petting</a>
        <a class="item">Feeding</a>
        <a class="item">Mind Reading</a>
      </div>
    </div>

    <% if user_signed_in? %>

      <%= link_to edit_user_registration_path, class: "item" do %>
        <i class="icon"></i>
        My Account
      <% end %>

      <%= link_to destroy_user_session_path, :method=>'delete', class: "item" do %>
        <i class="icon"></i>
        Log out
      <% end %>

    <% else %>

      <%= link_to new_user_registration_path, class: "item" do %>
        <i class="icon"></i>      
        Sign up
      <% end %>

      <%= link_to new_user_session_path, class: "item" do %>
        <i class="icon"></i>
        Login
      <% end %>
    
    <% end %>

  </div>
</div>
